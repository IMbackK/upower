#!/usr/bin/make -f

include /usr/share/cdbs/1/rules/debhelper.mk
include /usr/share/cdbs/1/class/autotools.mk
include /usr/share/cdbs/1/rules/utils.mk
include /usr/share/cdbs/1/rules/patchsys-quilt.mk

DEB_CONFIGURE_EXTRA_FLAGS = --enable-gtk-doc

# upower's version number is smaller than devicekit-power's, so we need to
# epoch the transitional packages
DEB_DH_GENCONTROL_ARGS_devicekit-power-doc = -- -v1:$(DEB_VERSION)

binary-install/upower::
	# do not install the transitional symlink, it's already shipped in
	# devicekit-power and we do not want to proliferate it
	rm debian/$(cdbs_curpkg)/usr/bin/devkit-power
