<?xml version="1.0" encoding="UTF-8"?> <!-- -*- XML -*- -->

<!DOCTYPE busconfig PUBLIC
 "-//freedesktop//DTD D-BUS Bus Configuration 1.0//EN"
 "http://www.freedesktop.org/standards/dbus/1.0/busconfig.dtd">
<busconfig>
  <!-- Only root can own the service -->
  <policy user="root">
    <allow own="org.freedesktop.DeviceKit.Power"/>
  </policy>
  <policy context="default">
    <allow send_destination="org.freedesktop.DeviceKit.Power"/>
    <allow send_interface="org.freedesktop.DeviceKit.Power"/>
    <allow send_interface="org.freedesktop.DeviceKit.Power.Device"/>
    <allow send_interface="org.freedesktop.DeviceKit.Power.QoS"/>
  </policy>
</busconfig>
